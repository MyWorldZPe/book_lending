<link href="~/Areas/Admin/Content/css/SanPham/Detail.css" rel="stylesheet" />
@model THUVIEN_CNPMNC_TH.Models.Book
<h1>CHI TIẾT SÁCH</h1>
<div class="row book-details">
    <div class="col-4 book-image">
        <img src="@Url.Content(Model.HinhAnh)" alt="Book Image" />
        <p class="mota">Mô tả:</p>
    </div>
    <div class="col-lg-8 book-info">
        <table>
            <tbody>
                <tr>
                    <th>Tên sách: @Html.DisplayFor(model => model.TenSach)</th>
                </tr>
                <tr>
                    <th>Mã thể loại: @Html.DisplayFor(model => model.TheLoai.MaTheLoai)</th>
                </tr>
                <tr>
                    <th>Tên thể loại: @Html.DisplayFor(model => model.TheLoai.TenTheLoai)</th>
                </tr>
                <tr>
                    <th>Năm xuất bản: @(Model.NamXuatBan.HasValue ? Model.NamXuatBan.Value.ToString("yyyy") : "")</th>
                </tr>
                <tr>
                    <th>Mã nhà xuất bản: @Html.DisplayFor(model => model.NhaXuatBan.MaNXB)</th>
                </tr>
                <tr>
                    <th>Nhà xuất bản: @Html.DisplayFor(model => model.NhaXuatBan.TenNXB)</th>
                </tr>
            </tbody>
        </table>
    </div>
    <span class="col-lg-12"> @Html.DisplayFor(model => model.MoTa)</span>
</div>
