                    <!-- Nav Item - Charts -->
                    <div class="sidebar-heading">Quản lý phiếu phạt</div>
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/PhieuPhat/QLPhieuPhat">
                            <i class="fa-solid fa-bookmark fa" style="color: #ffffff"></i>
                            <span>Quản Lý phiếu phạt</span>
                        </a>

                    </li>

                    <div class="sidebar-heading">Quản lý tài chính</div>

                    <!-- Nav Item - Charts -->
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/PhieuPhat/QLTaiChinh">
                            <i class="fa-solid fa-bookmark fa" style="color: #ffffff"></i>
