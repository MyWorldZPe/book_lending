@model THUVIEN_CNPMNC_TH.Models.TheLoai

@{
    ViewBag.Title = "AddTheLoai";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<link href="~/Areas/Admin/Content/css/SanPham/AddBookView.css" rel="stylesheet" />
<h1>THÊM THỂ LOẠI </h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.TenTheLoai, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenTheLoai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenTheLoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <input type="submit" value="Thêm Mới " class="btn btn-default" />
    </div>
}

<div>
    @Html.ActionLink("Trở về", "Index")
</div>
